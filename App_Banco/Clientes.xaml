        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!--TITULO-->
        <TextBlock x:Name="txt_title" Margin="172,10,0,0" TextWrapping="Wrap" Text="Banco App Clientes" Foreground="#FFAE2525" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Left" Height="33" Width="167">
