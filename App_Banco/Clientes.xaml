        <TextBox x:Name="txt_Ruta_Archivo" HorizontalAlignment="Left" Height="22" Margin="109,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248"/>
        <Label x:Name="lbl_info_Cargue" Content="Información del Cargue:" HorizontalAlignment="Left" Height="29" Margin="24,111,0,0" VerticalAlignment="Top" Width="143" RenderTransformOrigin="0.462,0.448"/>
        <Label x:Name="lbl_Lineas_Validas" Content="Validos:" HorizontalAlignment="Left" Height="29" Margin="24,188,0,0" VerticalAlignment="Top" Width="143"/>
        <Label x:Name="lbl_Lineas_Erróneas" Content="Erróneos:" HorizontalAlignment="Left" Height="29" Margin="24,232,0,0" VerticalAlignment="Top" Width="143"/>
        <Label x:Name="lbl_Log" Content="Log Errores" HorizontalAlignment="Left" Margin="218,266.04,0,0" VerticalAlignment="Top" Width="71"/>
        <Label x:Name="lbl_Cant_Regist" Content="" HorizontalAlignment="Left" Height="29" Margin="190,145,0,0" VerticalAlignment="Top" Width="109" RenderTransformOrigin="0.469,1.501"/>
        <Label x:Name="lbl_Lineas_Validas_Copy" Content="Número Registros:" HorizontalAlignment="Left" Height="29" Margin="24,145,0,0" VerticalAlignment="Top" Width="143"/>
        <Label x:Name="lbl_Cant_Regist_Validos" Content="" HorizontalAlignment="Left" Height="29" Margin="190,188,0,0" VerticalAlignment="Top" Width="109"/>
        <Label x:Name="lbl_Cant_Regist_Erróneos" Content="" HorizontalAlignment="Left" Height="29" Margin="190,232,0,0" VerticalAlignment="Top" Width="109"/>


    </Grid>
</Window>
